     function faqElement(className, data, idx) {
         idx = idx + 1
         const start = (idx === 1 || idx === 5 || idx === 9) ? "<div class='col-md-6' faq__column>" : "";
         console.log(start)
         const end = idx % 4 === 0 ? "</div>" : "";
         return `
                ${start}
                <div class="faq-element ${className}"><a onclick="window.showAction('${data
                 .question}')"  data-question-id="${data.question}" class="faq-element__question"
                href="#${data
                 .question}">${data.question}</a>
                     <div class="faq-element__answer" data-answer-id="${data.question}">${data.answer}</div>
                 </div>
                 ${end}
        `;
     }
